<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminEditPeminjaman"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#4CAF50">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtpinjambuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nama Buku"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/ep1"
        android:layout_below="@+id/txtpinjambuku"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="15dp"
        android:text="Dipinjam Oleh"/>

    <TextView
        android:id="@+id/ep2"
        android:layout_below="@+id/ep1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="15dp"
        android:text="Tanggal Pinjam"/>

    <TextView
        android:id="@+id/ep3"
        android:layout_below="@+id/ep2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:textSize="15dp"
        android:text="Tanggal Kembali"/>

    <!--isi-->

        <TextView
            android:id="@+id/txt_nama"
            android:layout_below="@+id/txtpinjambuku"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Nama Peminjam"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txt_tglpinjam"
            android:layout_below="@+id/ep1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="1/1/2021"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txt_tglkembali"
            android:layout_below="@+id/ep2"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Belum Dikemablikan"
            android:textColor="#FF0000"/>


    <!--tgl-->
        <Button
            android:id="@+id/et_tglkembali"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ep3"
            android:backgroundTint="#fff"
            android:textSize="20dp"
            android:background="@drawable/ic_date"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_below="@id/et_tglkembali"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:text="Pilih Tgl"
            android:gravity="center"
            android:textColor="#FF0000"/>



    </RelativeLayout>

    <Button
        android:id="@+id/btn_editpinjam"
        android:layout_margin="20dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#2196F3"
        android:text="Perbarui Data"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>