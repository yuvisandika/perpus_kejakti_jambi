<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BukuViewActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <!--gambar buku-->
            <ImageView
                android:id="@+id/imgbuku"
                android:layout_marginTop="30dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher_background"
                android:background="#fff"
                android:padding="10dp"/>

            <!--judul buku-->
            <TextView
                android:id="@+id/title"
                android:layout_below="@+id/imgbuku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center"
                android:text="Judul Buku"/>

            <!--judul bahan pustaka-->
            <ImageView
                android:id="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/title"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_buku"/>
            <TextView
                android:id="@+id/jenis1"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Jenis Bahan Pustaka : "/>
            <TextView
                android:id="@+id/jenis"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/jenis1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="Buku (B) "/>

            <!--nomor urut buku-->
            <ImageView
                android:id="@+id/ic_nomor"
                android:layout_below="@+id/jenis"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_nomor"/>
            <TextView
                android:id="@+id/nomor1"
                android:layout_below="@+id/jenis"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Nomor Urut Buku : "/>
            <TextView
                android:id="@+id/nomor"
                android:layout_below="@+id/nomor1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="0000"/>

            <!--Kepengarangan-->
            <ImageView
                android:id="@+id/ic_kepengarangan"
                android:layout_below="@+id/nomor"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_buku"/>
            <TextView
                android:id="@+id/kepengarangan1"
                android:layout_below="@+id/nomor"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Kepengarangan : "/>
            <TextView
                android:id="@+id/kepengarangan"
                android:layout_below="@+id/kepengarangan1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="-"/>

            <!--jilid-->
            <ImageView
                android:id="@+id/ic_jilid"
                android:layout_below="@+id/kepengarangan"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_buku"/>
            <TextView
                android:id="@+id/jilid1"
                android:layout_below="@+id/kepengarangan"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Jilid : "/>
            <TextView
                android:id="@+id/jilid"
                android:layout_below="@+id/jilid1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="-"/>

            <!--edisi-->
            <ImageView
                android:id="@+id/ic_edisi"
                android:layout_below="@+id/jilid"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_buku"/>
            <TextView
                android:id="@+id/edisi1"
                android:layout_below="@+id/jilid"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Edisi : "/>
            <TextView
                android:id="@+id/edisi"
                android:layout_below="@+id/edisi1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="-"/>

            <!--cetakan-->
            <ImageView
                android:id="@+id/ic_cetakan"
                android:layout_below="@+id/edisi"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_print"/>
            <TextView
                android:id="@+id/cetakan1"
                android:layout_below="@+id/edisi"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Cetakan : "/>
            <TextView
                android:id="@+id/cetakan"
                android:layout_below="@+id/cetakan1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="10"/>

            <!--i.s.b.n-->
            <ImageView
                android:id="@+id/ic_isbn"
                android:layout_below="@+id/cetakan"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_about"/>
            <TextView
                android:id="@+id/isbn1"
                android:layout_below="@+id/cetakan"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="I.S.B.N : "/>
            <TextView
                android:id="@+id/isbn"
                android:layout_below="@+id/isbn1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="978-602-844-22-0"/>

            <!--i.s.s.n-->
            <ImageView
                android:id="@+id/ic_issc"
                android:layout_below="@+id/isbn"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_about"/>
            <TextView
                android:id="@+id/issn1"
                android:layout_below="@+id/isbn"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="I.S.S.N : "/>
            <TextView
                android:id="@+id/issn"
                android:layout_below="@+id/issn1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="-"/>

            <!--tempat terbit-->
            <ImageView
                android:id="@+id/ic_tempat"
                android:layout_below="@+id/issn"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_loc"/>
            <TextView
                android:id="@+id/tempat1"
                android:layout_below="@+id/issn"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Tempat Terbit : "/>
            <TextView
                android:id="@+id/tempat"
                android:layout_below="@+id/tempat1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="Jakarta"/>

            <!--penerbit-->
            <ImageView
                android:id="@+id/ic_penerbit"
                android:layout_below="@+id/tempat"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_orang"/>
            <TextView
                android:id="@+id/penerbit1"
                android:layout_below="@+id/tempat"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Penerbit : "/>
            <TextView
                android:id="@+id/penerbit"
                android:layout_below="@+id/penerbit1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="Budi"/>

            <!--tahun Terbit-->
            <ImageView
                android:id="@+id/ic_tahun"
                android:layout_below="@+id/penerbit"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_date"/>
            <TextView
                android:id="@+id/tahun1"
                android:layout_below="@+id/penerbit"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Tahun Terbit : "/>
            <TextView
                android:id="@+id/tahun"
                android:layout_below="@+id/tahun1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="2020"/>

            <!--nomor klasifikasi-->
            <ImageView
                android:id="@+id/ic_klasifikasi"
                android:layout_below="@+id/tahun"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_nomor"/>
            <TextView
                android:id="@+id/klasifikasi1"
                android:layout_below="@+id/tahun"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Nomor Klasifikasi : "/>
            <TextView
                android:id="@+id/klasifikasi"
                android:layout_below="@+id/klasifikasi1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="-"/>

            <!--berasal dari-->
            <ImageView
                android:id="@+id/ic_berasal"
                android:layout_below="@+id/klasifikasi"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_orang"/>
            <TextView
                android:id="@+id/berasal1"
                android:layout_below="@+id/klasifikasi"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Berasal Dari : "/>
            <TextView
                android:id="@+id/berasal"
                android:layout_below="@+id/berasal1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="Budi"/>

            <!--keterangan-->
            <ImageView
                android:id="@+id/ic_keterangan"
                android:layout_below="@+id/berasal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_about"/>
            <TextView
                android:id="@+id/keterangan1"
                android:layout_below="@+id/berasal"
                android:layout_toRightOf="@+id/ic_buku"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Keterangan : "/>
            <TextView
                android:id="@+id/keterangan"
                android:layout_below="@+id/keterangan1"
                android:layout_toRightOf="@id/ic_buku"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#009933"
                android:text="dll"

                android:layout_marginBottom="20dp"/>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>